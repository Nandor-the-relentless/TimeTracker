{
  "name": "time-wise-standalone",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @app/web dev",
    "build:web": "pnpm --filter @app/web build",
    "preview:web": "pnpm --filter @app/web preview",
    "dev:desktop": "pnpm --filter @app/desktop dev",
    "build:desktop": "pnpm --filter @app/desktop build",
    "dev:mobile": "pnpm --filter @app/mobile dev",
    "build:mobile": "pnpm --filter @app/mobile build",
    "lint": "eslint .",
    "typecheck": "tsc -v || true",
    "postinstall": "husky install || true"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "eslint": "^9.19.0",
    "husky": "^9.0.0",
    "typescript": "^5.5.0"
  },
  "packageManager": "pnpm@9.0.0"
}